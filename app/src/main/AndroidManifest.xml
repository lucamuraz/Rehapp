<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rehapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launch_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="RtlEnabled">
        <activity android:name=".Activity.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Home" />
        </activity>
        <activity android:name=".Activity.EnduranceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.Home" />
        </activity>
        <activity android:name=".Activity.Home" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.LogActivity" />
        <activity android:name=".Activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.AddActivity" />
        <activity android:name=".Activity.AddNotification"/>
    </application>

</manifest>