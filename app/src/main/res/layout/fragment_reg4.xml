<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.RegFragment4" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <!-- BASE CARD VIEW -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="301dp"
            android:layout_height="101dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62">

            <!-- BASE CONSTRAINT LAYOUT FOR BASE CARD VIEW AND EXPANDABLE CARD VIEW -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/primo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/minore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="273dp"
                    android:layout_marginRight="273dp"
                    android:text="@string/EDSS"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.013"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/run"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/todo"
                    android:rotation="270"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.832"
                    app:layout_constraintStart_toEndOf="@+id/minore"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left_24px"
                    app:tint="@color/colorBtn" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView10"
            android:layout_width="228dp"
            android:layout_height="38dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="535dp"
            android:text="@string/qual_il_tuo_edss"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/reg3Back"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="298dp"
            android:layout_marginBottom="538dp"
            android:background="#FFFFFF"
            android:contentDescription="@string/todo"
            android:src="@drawable/abc_vector_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#000000" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Ho letto e accetto l'"
            app:layout_constraintTop_toBottomOf="@id/card1"
            app:layout_constraintStart_toStartOf="@id/card1"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/informativa_sulla_privacy"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/checkBox"
            app:layout_constraintBottom_toBottomOf="@id/checkBox"
            app:layout_constraintStart_toEndOf="@id/checkBox" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>