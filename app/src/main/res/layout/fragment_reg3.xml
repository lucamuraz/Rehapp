<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fragment3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.RegFragment3" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <!-- BASE CARD VIEW -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62">

            <!-- BASE CONSTRAINT LAYOUT FOR BASE CARD VIEW AND EXPANDABLE CARD VIEW -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/primo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp">

                <CheckBox
                    android:id="@+id/box1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Balance"/>
                <CheckBox
                    android:id="@+id/box2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box1"
                    android:text="Core"/>
                <CheckBox
                    android:id="@+id/box3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box2"
                    android:text="Arti Superiori"/>
                <CheckBox
                    android:id="@+id/box4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box3"
                    android:text="Arti Inferiori"/>
                <CheckBox
                    android:id="@+id/box5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box4"
                    android:text="Stretching"/>
                <CheckBox
                    android:id="@+id/box6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box5"
                    android:text="Respirazione"/>
                <CheckBox
                    android:id="@+id/box7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box6"
                    android:text="Torace"/>
                <CheckBox
                    android:id="@+id/box8"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/box7"
                    android:text="Dorso"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView10"
            android:layout_width="228dp"
            android:layout_height="38dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="535dp"
            android:text="@string/sistemi_funzionali"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/reg3Back"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="298dp"
            android:layout_marginBottom="538dp"
            android:background="#FFFFFF"
            android:contentDescription="@string/todo"
            android:src="@drawable/abc_vector_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#000000" />

        <Button
            android:id="@+id/Prosegui"
            android:layout_width="242dp"
            android:layout_height="40dp"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-light"
            android:text="@string/avanti"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.93" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>