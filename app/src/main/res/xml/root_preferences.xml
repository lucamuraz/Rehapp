<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/info_personali">

        <Preference
            app:key="user"
            app:title="@string/username"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="name"
            app:title="@string/signature_name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="password"
            app:title="@string/password"
            app:summary="********"
            android:inputType="textPassword"/>

        <EditTextPreference
            app:key="EDSS"
            app:title="@string/EDSS"
            app:useSimpleSummaryProvider="true" />

        <Preference app:key="Sistemi funzionali"
            app:title="Sistemi funzionali" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/info_app">

        <Preference app:key="Contatti"
            app:title="Contatti"
            app:summary="rehapp.unito@gmail.com"/>

        <Preference app:key="Informazioni"
            app:title="@string/version"
            app:summary="0.0.1"/>

        <Preference app:key="Licenses"
            app:title="Licenze e copiright" />

        <Preference app:key="Privacy policy"
            app:title="Informativa sulla privacy" />

    </PreferenceCategory>

</PreferenceScreen>